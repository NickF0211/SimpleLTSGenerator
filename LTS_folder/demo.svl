-- generation of bcg
% bcg_io graph_0.aut graph_0.bcg
% bcg_io graph_1.aut graph_1.bcg
% bcg_io graph_2.aut graph_2.bcg

"SCENARIO_$S.exp" = leaf divbranching reduction of
		par
			-- graph 1 actions
			ACT_SHARED ->
				"graph_0.bcg"
        ||
			-- graph 1 actions
			ACT_SHARED ->
				"graph_1.bcg"
        ||
			-- graph 1 actions
			ACT_SHARED ->
				"graph_2.bcg"
		end par;

"full_graph.bcg" = divbranching reduction of
	generation of "SCENARIO_$S.exp";